<h1>Editing course</h1>

<%= form_for :course, url: course_path(@course), method: :patch do |f| %>
  <p>
    <%= f.label :cname %><br>
    <%= f.text_field :cname %>
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', courses_path %>