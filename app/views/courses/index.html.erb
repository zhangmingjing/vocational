<h1>Listing courses</h1>
<%= link_to 'New course', new_course_path %>
<table>
                <tr>
                                <th>Imagename</th>
                                <th>Title</th>
                                <th>Text</th>
                                <th colspan="3"></th>
                </tr>

                <% @courses.each do |course| %>
                <tr>
                                <td><%= course.imagename %></td>
                                <td><%= course.title %></td>
                                <td><%= course.text %></td>
                                <td><%= link_to 'Show', course_path(course) %></td>
                                <td><%= link_to 'Edit', edit_course_path(course) %></td>
                                <td><%= link_to 'Destroy', course_path(course), method: :delete %></td>
                </tr>
                <% end %>
</table>